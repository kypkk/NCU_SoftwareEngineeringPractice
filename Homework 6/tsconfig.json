{
    "compilerOptions": {
        "outDir": "./public/js/",
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "lib": [
            "es2015", "dom"
        ],
        "baseUrl": "src",
        "paths": {
            "@externals/*": ["../externals/*"]
        }
    },
    "include": [
        "src/**/*", 
        "./jest-setup.ts"
    ],
    "exclude": [
        "node_modules",
        "externals"
    ]
}
